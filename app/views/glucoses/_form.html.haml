= bootstrap_form_with model: @glucose, local: true, layout: :horizontal do |f|
  = render 'shared/error_messages', object: f.object
  = f.number_field :reading, required: true
  = f.datetime_select :date
  .actions.col-md-10.offset-md-2
    = f.submit 'Save', class: 'btn btn-success'
    - unless @glucose.new_record?
      = link_to 'Destroy', @glucose, method: :delete, data: { confirm: 'Are you sure?' }
