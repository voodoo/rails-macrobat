%h3 
  - if current_user == @user
    = link_to edit_user_path(@user) do
      = octicon :person, width: 40
      = @user.name
  - else
    = octicon :person, width: 40
    = @user.name  


%hr
- @meals = @user.meals
= render template: 'meals/index'

%hr
- @glucoses = @user.glucoses
= render template: 'glucoses/index'

%hr
- @ketos = @user.ketos
= render template: 'ketos/index'


%hr
- @pressures = @user.pressures
= render template: 'pressures/index'
