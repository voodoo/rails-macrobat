= bootstrap_form_with model: @user, layout: :horizontal do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  = f.text_field :name
  = f.email_field :email
  .actions
    = f.submit 'Save'

